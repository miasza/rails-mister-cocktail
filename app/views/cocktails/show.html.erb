<div class="container">
  <div class="card-main row">
    <div class="col-sm-6 col-md-4" style="background: url('<%= cl_image_path @cocktail.photo, height: 400, width: 400, crop: :fill %>')">



    </div>
    <div class="col-sm-6 col-md-4 text-center drink-name">
      <h1><%= @cocktail.name %></h1>
      <h4>Ingredients</h4>
      <ul class="list-unstyled mt-4 text-left px-5">
        <% @cocktail.doses.each do |dose| %>
          <li>
          <%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-minus-circle icon-small"></i>
            <% end %>
          <%= dose.ingredient.name%> <%= dose.description %>
          </li>
         <% end %>
      </ul>
    </div>

      <%= render 'doses/form' %>



</div>
