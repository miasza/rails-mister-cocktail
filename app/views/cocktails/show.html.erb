<div class="container">
  <div class="card-main row">
    <div class="col-sm-6 col-md-4">
      <img src="https://images.pexels.com/photos/997727/pexels-photo-997727.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=600" width='100%'>

    </div>
    <div class="col-sm-6 col-md-4 text-center drink-name">
      <h1><%= @cocktail.name %></h1>
      <h4>Ingredients</h4>
      <ul class="list-unstyled mt-4">
        <% @cocktail.doses.each do |dose| %>
          <li>
          <%= link_to dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-minus-circle icon-small"></i>
            <% end %>
          <%= dose.ingredient.name%> <%= dose.description %>
          </li>
         <% end %>
      </ul>
    </div>

      <%= render 'doses/form' %>




</div>
